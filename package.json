{
  "name": "lifestyle-app",
  "version": "2.0.0",
  "description": "Aplicativo de gerenciamento de rotina diária com sincronização Google Drive",
  "scripts": {
    "build": "./scripts/vercel-build.sh",
    "build:dev": "./scripts/generate-env.sh",
    "dev": "./scripts/generate-env.sh && python -m http.server 8000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/main.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}